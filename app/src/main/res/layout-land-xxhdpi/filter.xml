<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    >
    <TextView
        android:id="@+id/filterTitle"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="land-xxhdpi"
        android:gravity="center_horizontal"
        android:textSize="25sp"

        />
    <RelativeLayout
        android:id="@+id/rl_filter_v"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >
        <ImageView
            android:id="@+id/filterV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/v"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/filterVTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetarian"
            android:layout_toRightOf="@id/filterV"
            android:layout_centerVertical="true"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/filterVCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_filter_ve"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"

        >
        <ImageView
            android:id="@+id/filterVe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ve"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/filterVeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegan"
            android:layout_toRightOf="@id/filterVe"
            android:layout_centerVertical="true"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/filterVeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_filter_gf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"

        >
        <ImageView
            android:id="@+id/filterGf"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gf"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/filterGfTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gluten Free"
            android:layout_toRightOf="@id/filterGf"
            android:layout_centerVertical="true"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/filterGfCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_filter_m"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/filterM"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/vg"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/filterMTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meat"
            android:layout_toRightOf="@id/filterM"
            android:layout_centerVertical="true"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/filterMCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            />
    </RelativeLayout>
</LinearLayout>