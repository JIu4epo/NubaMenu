<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.nuba.nubamenu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/nuba_logo"
        android:theme="@style/AppTheme" >
        <provider
            android:name="ca.nuba.nubamenu.data.NubaProvider"
            android:authorities="ca.nuba.nubamenu" />

        <activity
            android:name="ca.nuba.nubamenu.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.nuba.nubamenu.MenuSelectActivity"
            android:label="@string/title_activity_menu_select"
            android:parentActivityName="ca.nuba.nubamenu.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="ca.nuba.nubamenu.MenuActivity"
            android:label="@string/title_activity_menu"
            android:parentActivityName="ca.nuba.nubamenu.MenuSelectActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MenuSelectActivity" />
        </activity>
        <activity
            android:name="ca.nuba.nubamenu.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="ca.nuba.nubamenu.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuActivity" />
        </activity>
    </application>

</manifest>