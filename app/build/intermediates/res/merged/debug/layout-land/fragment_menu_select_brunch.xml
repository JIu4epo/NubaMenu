<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="ca.nuba.nubamenu.MenuSelectActivityFragment"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/nubaMenuLunch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:src="@drawable/nubalunch"
        android:scaleType="centerCrop"

        />

    <ImageButton
        android:id="@+id/nubaMenuDinner"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:src="@drawable/nubadinner"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:id="@+id/nubaMenuBrunch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:src="@drawable/nubabrunch"
        android:scaleType="centerCrop"
        />

</LinearLayout>
